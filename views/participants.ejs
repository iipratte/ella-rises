<!DOCTYPE html>
<html lang="en">
<head> <!-- Title -->
    <title>Participants - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">
 <!-- HEader -->
    <%- include('partials/header') %>

    <div class="container mt-5 mb-5">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-primary fw-bold" style="font-family: 'DM Serif Display', serif;">Participant Directory</h1>
                <p class="text-muted">Manage program participants and track milestones.</p>
            </div>
            <!-- SHows list-->
            <div class="d-flex gap-2">
                 <button class="btn btn-outline-secondary btn-sm" onclick="window.print()">
                    <i class="bi bi-printer"></i> Print List
                 </button>
            </div>
        </div>
 <!-- GEt route for participatns -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body bg-white p-4">
                <form action="/participants" method="GET" class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">First Name</label>
                        <input type="text" class="form-control" name="firstName" value="<%= searchFirstName %>" placeholder="Search...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">Last Name</label>
                        <input type="text" class="form-control" name="lastName" value="<%= searchLastName %>" placeholder="Search...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">Username</label>
                        <input type="text" class="form-control" name="username" value="<%= searchUsername %>" placeholder="Search linked user...">
                    </div>
                    <div class="col-md-3 d-grid">
                        <button type="submit" class="btn btn-primary">Apply Filter</button>
                    </div>
                    <!-- Search -->
                    <% if (searchFirstName || searchLastName || searchUsername) { %>
                        <div class="col-12 text-end mt-2">
                            <a href="/participants" class="text-decoration-none small text-danger">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="card shadow border-0">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3 border-bottom">
                <h5 class="mb-0 fw-bold text-dark">All Participants</h5>
                <!-- Check if parent or manager -->
                <% if (user && (user.role === 'Manager' || user.isParent)) { %>
                    <a href="/participants/add" class="btn btn-sm btn-primary rounded-pill px-3">
                        <i class="bi bi-plus-lg"></i> Add New <!-- Add route -->
                    </a>
                <% } %>
            </div>
            
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0" style="vertical-align: middle;">
                        <thead class="table-light">
                            <tr> <!-- Table -->
                                <th class="ps-4 py-3">Name</th>
                                <th class="py-3">Email</th>
                                <th class="py-3">School / Employer</th>
                                <th class="py-3">Field of Interest</th>
                                <th class="py-3">Milestones</th>
                                <% if (user) { %> 
                                    <th class="text-end pe-4 py-3">Actions</th> 
                                <% } %>
                            </tr>
                        </thead>
                    
                        <tbody> <!-- Loop for participatns -->
                            <% if (participants.length === 0) { %>
                                <tr>
                                    <td colspan="6" class="text-center py-5 text-muted">
                                        No participants found matching your search.
                                    </td>
                                </tr>
                            <% } else { %> <!-- PArticipant loop -->
                                <% participants.forEach(p => { %>
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-primary"><%= p.participantfirstname %> <%= p.participantlastname %></div>
                                            <% if(p.username) { %>
                                                <small class="text-muted">(@<%= p.username %>)</small>
                                            <% } %>
                                        </td>
                                        
                                        <td>
                                            <a href="mailto:<%= p.participantemail %>" class="text-decoration-none text-secondary">
                                                <%= p.participantemail %>
                                            </a>
                                        </td>

                                        <td><%= p.participantschooloremployer || '-' %></td>
                                        <td><%= p.participantfieldofinterest || '-' %></td>

                                        <td>
                                            <%  <!-- Row calculations -->
                                                // Calculate permissions for this specific row
                                                const isManagerPill = user && user.role === 'Manager';
                                                const isOwnerPill = user && p.username === user.username;
                                                const canEditMilestones = isManagerPill || isOwnerPill;
                                            %>
        
                                            <% if (canEditMilestones) { %>
                                                <a href="/milestones/view/<%= p.participantid %>" class="text-decoration-none" title="Manage Milestones">
                                            <% } %> <!-- Id pull-->
        
                                            <% if (p.milestone_count > 0) { %>
                                                <span class="badge bg-primary bg-opacity-75 rounded-pill">
                                                    <%= p.milestone_count %> Achieved
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary bg-opacity-25 text-dark rounded-pill">
                                                    0 Achieved
                                                </span>
                                            <% } %>
        
                                            <% if (canEditMilestones) { %>
                                                </a>
                                            <% } %>
                                        </td>

                                        <% 
                                            const isManager = user && user.role === 'Manager';
                                            const isOwner = user && p.username === user.username;
                                        %>
                                            <!-- See if manager or owner-->
                                        <% if (isManager || isOwner) { %>
                                            <td class="text-end pe-4">
                                                <div class="d-flex justify-content-end gap-2">
                                                    <a href="/participants/edit/<%= p.participantid %>" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                        Edit <!-- Edit route -->
                                                    </a>
                                                    
                                                    <% if (isManager) { %> <!-- Delete route -->
                                                        <form action="/participants/delete/<%= p.participantid %>" method="POST" class="d-inline" onsubmit="return confirm('Delete participant <%= p.participantfirstname %>?');">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                                <i class="bi bi-trash-fill"></i>
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                            </td>
                                        <% } else if (user) { %>
                                            <td></td>
                                        <% } %>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="card-footer bg-white text-muted small py-3">
                Showing <%= participants.length %> record(s)
            </div> 
        </div>
    </div>
<!-- Footer -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>