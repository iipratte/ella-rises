<!DOCTYPE html>
<html lang="en">
<head>
    <title>Participants - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5 mb-5">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-primary fw-bold" style="font-family: 'DM Serif Display', serif;">Participant Directory</h1>
                <p class="text-muted">Manage program participants and contact information.</p>
            </div>
            
            <div>
                 <button class="btn btn-outline-secondary me-2" onclick="window.print()">
                    <i class="bi bi-printer"></i> Print List
                 </button>
            </div>
        </div>

        <div class="card shadow border-0">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3 border-bottom">
                <h5 class="mb-0 fw-bold text-dark">All Participants</h5>
                
                <% if (user && user.role === 'Manager') { %>
                    <a href="/participants/add" class="btn btn-sm btn-primary rounded-pill px-3">
                        <i class="bi bi-plus-lg"></i> Add New
                    </a>
                <% } %>
            </div>
            
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0" style="vertical-align: middle;">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Name</th>
                                <th class="py-3">Email</th>
                                <th class="py-3">Role</th>
                                <th class="py-3">City</th> <% if (user && user.role === 'Manager') { %> 
                                    <th class="text-end pe-4 py-3">Actions</th> 
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% if (participants.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        No participants found in the database.
                                    </td>
                                </tr>
                            <% } else { %>
                                
                                <% participants.forEach(p => { %>
                                    <tr>
                                        <td class="ps-4 fw-bold">
                                            <%= p.participantfirstname %> <%= p.participantlastname %>
                                        </td>
                                        
                                        <td>
                                            <a href="mailto:<%= p.participantemail %>" class="text-decoration-none text-secondary">
                                                <%= p.participantemail %>
                                            </a>
                                        </td>
                                        
                                        <td>
                                            <% if (p.participantrole === 'Donor') { %>
                                                <span class="badge bg-success rounded-pill">Donor</span>
                                            <% } else if (p.participantrole === 'Mentor') { %>
                                                <span class="badge bg-info text-dark rounded-pill">Mentor</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary rounded-pill">Participant</span>
                                            <% } %>
                                        </td>

                                        <td><%= p.participantcity || '-' %></td>

                                        <% if (user && user.role === 'Manager') { %>
                                            <td class="text-end pe-4">
                                                <div class="btn-group">
                                                    <a href="/participants/edit/<%= p.participantid %>" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </a>
                                                    
                                                    <form action="/participants/delete/<%= p.participantid %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete <%= p.participantfirstname %>?');">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                            <i class="bi bi-trash-fill"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }) %>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="card-footer bg-white text-muted small py-3">
                Showing <%= participants.length %> record(s)
            </div>
        </div>
    </div>

    <footer class="text-center mt-5 mb-4 text-muted border-top pt-4">
        <small>&copy; 2025 Ella Rises.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>