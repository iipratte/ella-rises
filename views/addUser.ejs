<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add User - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5 mb-5" style="max-width: 700px;">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white py-3">
                <h4 class="mb-0 fw-bold text-center" style="font-family: 'DM Serif Display', serif;">Create New User Account</h4>
            </div>
            <div class="card-body p-4">
                
                <form action="/admin/users/add" method="POST">
                    
                    <h6 class="text-uppercase text-muted fw-bold mb-3 small">Login Credentials</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Username *</label>
                            <input type="text" class="form-control" name="username" required placeholder="e.g., jsmith">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Password *</label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Role / Access Level *</label>
                            <select class="form-select" name="level" id="roleSelect" required>
                                <option value="U" selected>User (Standard Access)</option>
                                <option value="M">Manager (Full Admin Access)</option>
                            </select>
                        </div>
                        
                        <div class="col-md-6 align-items-center" id="parentSection">
                            <div class="form-check form-switch mt-4">
                                <input class="form-check-input" type="checkbox" id="parentflag" name="parentflag">
                                <label class="form-check-label fw-bold" for="parentflag">Is this a Parent?</label>
                                <div class="form-text small lh-1">Parents don't have their own participant data.</div>
                            </div>
                        </div>
                    </div>

                    <div id="participantFields" style="display: none;">
                        <hr class="my-4 opacity-25">
                        <h6 class="text-uppercase text-muted fw-bold mb-3 small">Participant Details</h6>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">School or Employer</label>
                                <input type="text" class="form-control" name="schoolOrEmployer" placeholder="e.g. UVU">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Field of Interest</label>
                                <input type="text" class="form-control" name="fieldOfInterest" placeholder="e.g. STEM">
                            </div>
                        </div>
                    </div>

                    <hr class="my-4 opacity-25">

                    <h6 class="text-uppercase text-muted fw-bold mb-3 small">Personal Information</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">First Name</label>
                            <input type="text" class="form-control" name="firstname" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Last Name</label>
                            <input type="text" class="form-control" name="lastname" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email *</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Phone</label>
                            <input type="tel" class="form-control" name="phone">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth</label>
                        <input type="date" class="form-control" name="dob">
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-5">
                            <label class="form-label fw-bold">City</label>
                            <input type="text" class="form-control" name="city">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">State</label>
                            <input type="text" class="form-control" name="state" maxlength="2">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Zip</label>
                            <input type="text" class="form-control" name="zip">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/admin/users" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary px-5">Create User</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('roleSelect');
            const parentSection = document.getElementById('parentSection');
            const parentCheckbox = document.getElementById('parentflag');
            const participantFields = document.getElementById('participantFields');

            function toggleFields() {
                const isManager = roleSelect.value === 'M';
                const isParent = parentCheckbox.checked;

                if (isManager) {
                    // Manager: Hide Parent Toggle, Hide Participant Fields
                    parentSection.classList.remove('d-flex');
                    parentSection.classList.add('d-none');
                    parentCheckbox.checked = false;
                    participantFields.style.display = 'none';
                } else {
                    // User: Show Parent Toggle
                    parentSection.classList.remove('d-none');
                    parentSection.classList.add('d-flex');

                    if (isParent) {
                        // Parent: Hide Participant Fields
                        participantFields.style.display = 'none';
                    } else {
                        // Standard Participant: Show Fields
                        participantFields.style.display = 'block';
                    }
                }
            }

            // Listeners
            roleSelect.addEventListener('change', toggleFields);
            parentCheckbox.addEventListener('change', toggleFields);
            
            // Init
            toggleFields(); 
        });
    </script>
</body>
</html>