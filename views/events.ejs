<!DOCTYPE html>
<html lang="en">
<head>
    <title>Events - Ella Rises</title>
    <%- include('partials/head') %> 
    <style>
        .event-row {
            transition: background-color 0.2s;
            border-left: 5px solid transparent;
        }
        .event-row:hover {
            background-color: #f8f9fa;
        }
        .border-workshop { border-left-color: var(--er-primary); }
        .border-leadership { border-left-color: var(--er-sage); }
        
        .accordion-button:not(.collapsed) {
            background-color: var(--er-bg);
            color: var(--er-charcoal);
            font-weight: bold;
        }
        .accordion-button:focus { box-shadow: none; }
    </style>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5 mb-5">
        
        <!-- 1. PAGE HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-primary fw-bold" style="font-family: 'DM Serif Display', serif;">Program Schedule</h1>
                <p class="text-muted mb-0">Browse upcoming workshops and manage your registrations.</p>
            </div>
            <% if (user && user.role === 'Manager') { %>
                <a href="/events/add" class="btn btn-primary shadow-sm rounded-pill px-4">
                    <i class="bi bi-plus-lg me-1"></i> Add Event
                </a>
            <% } %>
        </div>

        <!-- 2. MY EVENTS SECTION (Only show if logged in user has registrations) -->
        <% if (myRegistrations && myRegistrations.length > 0) { %>
            <div class="card shadow-sm border-0 mb-5">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="fw-bold text-success mb-0"><i class="bi bi-check-circle-fill me-2"></i> My Registered Events</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Event</th>
                                    <th>Date</th>
                                    <th>Attendee</th>
                                    <th class="text-end pe-4">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% myRegistrations.forEach(reg => { %>
                                    <tr>
                                        <td class="ps-4 fw-bold text-primary"><%= reg.eventname %></td>
                                        <td><%= new Date(reg.eventdatetimestart).toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge bg-secondary rounded-pill">
                                                <%= reg.participantfirstname %>
                                            </span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <form action="/events/unregister" method="POST" onsubmit="return confirm('Cancel registration for <%= reg.eventname %>?');">
                                                <input type="hidden" name="registrationId" value="<%= reg.registrationid %>">
                                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">Cancel</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>


        <!-- 3. ALL EVENTS ACCORDION -->
        <div class="accordion shadow-sm border-0" id="eventsAccordion">
            
            <!-- UPCOMING -->
            <div class="accordion-item border-0 mb-3 rounded overflow-hidden shadow-sm">
                <h2 class="accordion-header" id="headingUpcoming">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUpcoming" aria-expanded="true">
                        <i class="bi bi-calendar-event me-2 text-primary"></i> Upcoming Events
                        <span class="badge bg-primary ms-3 rounded-pill"><%= upcoming.length %></span>
                    </button>
                </h2>
                <div id="collapseUpcoming" class="accordion-collapse collapse show" data-bs-parent="#eventsAccordion">
                    <div class="accordion-body p-0">
                        <% if (upcoming.length === 0) { %>
                            <div class="text-center py-5 text-muted">No upcoming events.</div>
                        <% } else { %>
                            <% upcoming.forEach(event => { %>
                                <div class="event-row p-4 border-bottom bg-white <%= event.eventtype === 'Leadership' ? 'border-leadership' : 'border-workshop' %>">
                                    <div class="row align-items-center">
                                        <div class="col-md-2 text-center mb-3 mb-md-0 border-end">
                                            <h2 class="mb-0 fw-bold text-dark"><%= new Date(event.eventdatetimestart).getDate() %></h2>
                                            <span class="text-uppercase small text-muted fw-bold"><%= new Date(event.eventdatetimestart).toLocaleString('default', { month: 'short' }) %></span>
                                            <div class="small text-muted mt-1"><%= new Date(event.eventdatetimestart).toLocaleTimeString([], { hour: '2-digit', minute:'2-digit' }) %></div>
                                        </div>
                                        <div class="col-md-6 mb-3 mb-md-0 ps-md-4">
                                            <span class="badge rounded-pill mb-2 <%= event.eventtype === 'Leadership' ? 'bg-success bg-opacity-10 text-success' : 'bg-danger bg-opacity-10 text-danger' %>"><%= event.eventtype %></span>
                                            <h5 class="fw-bold mb-1"><%= event.eventname %></h5>
                                            <p class="text-muted small mb-0"><i class="bi bi-geo-alt-fill me-1"></i> <%= event.eventlocation %></p>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <div class="d-inline-block text-start mb-2 me-3">
                                                <h5 class="mb-0 fw-bold text-center"><%= event.reg_count || 0 %></h5>
                                                <small class="text-muted" style="font-size: 0.7rem;">Registered</small>
                                            </div>

                                            <!-- LOGIC: REGISTER BUTTON -->
                                            <% if (myParticipants.length === 0) { %>
                                                <!-- No Participant Profile? Prompt to create one. -->
                                                <a href="/participants/add" class="btn btn-sm btn-outline-primary">Create Profile to Join</a>
                                            
                                            <% } else if (myParticipants.length === 1) { %>
                                                <!-- STUDENT (1 Profile): Instant Register -->
                                                <form action="/events/register" method="POST" class="d-inline">
                                                    <input type="hidden" name="scheduleId" value="<%= event.scheduleid %>">
                                                    <input type="hidden" name="participantId" value="<%= myParticipants[0].participantid %>">
                                                    <button type="submit" class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm">Register</button>
                                                </form>
                                            
                                            <% } else { %>
                                                <!-- PARENT (>1 Profile): Open Modal -->
                                                <button type="button" class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#registerModal"
                                                        onclick="setModalData('<%= event.scheduleid %>', '<%= event.eventname %>')">
                                                    Register...
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- PAST -->
            <div class="accordion-item border-0 rounded overflow-hidden shadow-sm">
                <h2 class="accordion-header" id="headingPast">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePast" aria-expanded="false">
                        <i class="bi bi-clock-history me-2 text-secondary"></i> Past Events
                        <span class="badge bg-secondary ms-3 rounded-pill"><%= past.length %></span>
                    </button>
                </h2>
                <div id="collapsePast" class="accordion-collapse collapse" data-bs-parent="#eventsAccordion">
                    <div class="accordion-body p-0">
                        <% past.forEach(event => { %>
                            <div class="event-row p-4 border-bottom bg-light opacity-75">
                                <div class="row align-items-center">
                                    <div class="col-md-2 text-center border-end"><h5 class="mb-0 fw-bold text-muted"><%= new Date(event.eventdatetimestart).toLocaleDateString() %></h5></div>
                                    <div class="col-md-6 ps-md-4"><h6 class="fw-bold mb-1"><%= event.eventname %></h6><p class="text-muted small mb-0"><%= event.eventlocation %></p></div>
                                    <div class="col-md-4 text-end"><span class="fw-bold text-dark"><%= event.reg_count || 0 %></span> <small class="text-muted">Attended</small></div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- PARENT REGISTRATION MODAL -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Register for Event</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/events/register" method="POST">
                    <div class="modal-body p-4">
                        <p>Registering for: <strong id="modalEventName" class="text-primary"></strong></p>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Who is attending?</label>
                            <select class="form-select" name="participantId" required>
                                <option value="" selected disabled>-- Select Participant --</option>
                                <% myParticipants.forEach(p => { %>
                                    <option value="<%= p.participantid %>"><%= p.participantfirstname %> <%= p.participantlastname %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <input type="hidden" name="scheduleId" id="modalScheduleId">
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4">Confirm Registration</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SCRIPT TO PASS DATA TO MODAL -->
    <script>
        function setModalData(scheduleId, eventName) {
            document.getElementById('modalScheduleId').value = scheduleId;
            document.getElementById('modalEventName').innerText = eventName;
        }
    </script>
</body>
</html>