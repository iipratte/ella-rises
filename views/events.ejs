<!DOCTYPE html>
<html lang="en">
<head> <!-- Title -->
    <title>Events - Ella Rises</title>
    <%- include('partials/head') %>  <!-- Head -->
    <style> 
        .event-row { transition: background-color 0.2s; border-left: 5px solid transparent; }
        .event-row:hover { background-color: #f8f9fa; }
        .border-workshop { border-left-color: var(--er-primary); }
        .border-leadership { border-left-color: var(--er-sage); }
        .accordion-button:not(.collapsed) { background-color: var(--er-bg); color: var(--er-charcoal); font-weight: bold; }
        .accordion-button:focus { box-shadow: none; }
        .participant-option:hover { background-color: #f8f9fa; }
        .participant-label { cursor: pointer; width: 100%; margin-bottom: 0; }
    </style>
</head> <!-- Extra syling ^-->
<body class="bg-light">

    <%- include('partials/header') %>
<!-- Header -->
    <div class="container mt-5 mb-5">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-primary fw-bold" style="font-family: 'DM Serif Display', serif;">Program Schedule</h1>
                <p class="text-muted mb-0">Browse upcoming workshops and manage your registrations.</p>
            </div>
            <% if (user && user.role === 'Manager') { %> <!-- Checks if admin-->
                <a href="/events/add" class="btn btn-primary shadow-sm rounded-pill px-4"><i class="bi bi-plus-lg me-1"></i> Add Event</a>
            <% } %> <!-- Add event route -->
        </div>

        <% if (myRegistrations && myRegistrations.length > 0) { %>
            
            <%  <!-- Split the array -->
                // Logic to split the array into upcoming and past
                const now = new Date();
                const upcomingRegs = myRegistrations.filter(g => new Date(g.eventdatetimestart) >= now);
                const pastRegs = myRegistrations.filter(g => new Date(g.eventdatetimestart) < now);
            %>

            <% if (upcomingRegs.length > 0) { %>
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="fw-bold text-success mb-0"><i class="bi bi-calendar-check-fill me-2"></i> Upcoming Registrations</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light"> <!-- Table for upcoming -->
                                    <tr><th class="ps-4">Event</th><th>Date</th><th>Attendees</th></tr>
                                </thead>
                                <tbody>
                                    <% upcomingRegs.forEach(group => { %>
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary"><%= group.eventname %></td>
                                            <td><%= new Date(group.eventdatetimestart).toLocaleDateString() %></td>
                                            <td> <!-- Pulling data-->
                                                <% group.attendees.forEach(kid => { %>
                                                    <div class="d-inline-block me-2 mb-1">
                                                        <div class="badge bg-secondary rounded-pill pe-2 d-flex align-items-center shadow-sm">
                                                            <span class="ps-1 me-2"><%= kid.name %></span> <!-- Unregister route -->
                                                            <form action="/events/unregister" method="POST" class="d-inline m-0 p-0" onsubmit="return confirm('Cancel registration for <%= kid.name %>?');">
                                                                <input type="hidden" name="registrationId" value="<%= kid.registrationid %>">
                                                                <button type="submit" class="btn btn-link text-white p-0 opacity-75 hover-opacity-100" style="text-decoration: none; line-height: 1;"><i class="bi bi-x-circle-fill"></i></button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                <% }) %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% } %>
<!-- Registration history -->
            <% if (pastRegs.length > 0) { %>
                <div class="accordion mb-5" id="pastRegAccordion">
                    <div class="accordion-item border-0 shadow-sm rounded overflow-hidden">
                        <h2 class="accordion-header" id="headingPastRegs">
                            <button class="accordion-button collapsed bg-light text-muted" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePastRegs">
                                <i class="bi bi-clock-history me-2"></i> Past Registrations History
                            </button>
                        </h2>
                        <div id="collapsePastRegs" class="accordion-collapse collapse" data-bs-parent="#pastRegAccordion">
                            <div class="accordion-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm mb-0 align-middle text-muted">
                                        <thead class="table-light small">
                                            <tr><th class="ps-4">Event</th><th>Date</th><th>Attendees</th></tr>
                                        </thead> 
                                        <tbody>
                                            <% pastRegs.forEach(group => { %>
                                                <tr>
                                                    <td class="ps-4 fw-bold"><%= group.eventname %></td>
                                                    <td><%= new Date(group.eventdatetimestart).toLocaleDateString() %></td>
                                                    <td>
                                                        <% group.attendees.forEach(kid => { %>
                                                            <span class="badge bg-light text-secondary border me-1"><%= kid.name %></span>
                                                        <% }) %>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

        <% } %>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body bg-white p-4">
                <form action="/events" method="GET" class="row g-3 align-items-end">
                    <div class="col-md-5"> <!-- Event route get & form -->
                        <label class="form-label fw-bold text-muted small text-uppercase">Event Name</label>
                        <input type="text" class="form-control" name="searchEvent" value="<%= searchEvent %>" placeholder="e.g. Workshop...">
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-bold text-muted small text-uppercase">Location</label>
                        <input type="text" class="form-control" name="searchLocation" value="<%= searchLocation %>" placeholder="e.g. UVU...">
                    </div>
                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div> <!-- Checking if event or location -->
                    <% if (searchEvent || searchLocation) { %>
                        <div class="col-12 text-end mt-2"> <!-- Nav to events-->
                            <a href="/events" class="text-decoration-none small text-danger"><i class="bi bi-x-circle"></i> Clear Filters</a>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="accordion shadow-sm border-0" id="eventsAccordion">
            
            <div class="accordion-item border-0 mb-3 rounded overflow-hidden shadow-sm">
                <h2 class="accordion-header" id="headingUpcoming">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUpcoming" aria-expanded="true">
                        <i class="bi bi-calendar-event me-2 text-primary"></i> Upcoming Events
                        <span class="badge bg-primary ms-3 rounded-pill"><%= upcoming.length %></span>
                    </button>
                </h2>
                <div id="collapseUpcoming" class="accordion-collapse collapse show">
                    <div class="accordion-body p-0">
                        <% if (upcoming.length === 0) { %>
                            <div class="text-center py-5 text-muted">No upcoming events.</div>
                        <% } else { %>
                            <% upcoming.forEach(event => { %>
                                <div class="event-row p-4 border-bottom bg-white <%= event.eventtype === 'Leadership' ? 'border-leadership' : 'border-workshop' %>">
                                    <div class="row align-items-center">
                                        <div class="col-md-2 text-center border-end">
                                            <h2 class="mb-0 fw-bold text-dark"><%= new Date(event.eventdatetimestart).getDate() %></h2>
                                            <span class="text-uppercase small text-muted fw-bold"><%= new Date(event.eventdatetimestart).toLocaleString('default', { month: 'short' }) %></span>
                                            <div class="small text-muted mt-1"><%= new Date(event.eventdatetimestart).toLocaleTimeString([], { hour: '2-digit', minute:'2-digit' }) %></div>
                                        </div>

                                        <div class="col-md-5 ps-md-4">
                                            <span class="badge rounded-pill mb-2 <%= event.eventtype === 'Leadership' ? 'bg-success bg-opacity-10 text-success' : 'bg-danger bg-opacity-10 text-danger' %>"><%= event.eventtype %></span>
                                            <h5 class="fw-bold mb-1"><%= event.eventname %></h5>
                                            <p class="text-muted small mb-0"><i class="bi bi-geo-alt-fill me-1"></i> <%= event.eventlocation %></p>
                                        </div>
                                        <div class="col-md-5 text-md-end">

                                            <% if (user && user.role === 'Manager') { %> <!-- Check if admin-->
                                                <div class="d-inline-flex gap-1 me-3 align-items-center">
                                                    <a href="/events/edit/<%= event.eventid %>" class="btn btn-sm btn-outline-secondary rounded-circle" title="Edit" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="bi bi-pencil-fill"></i> <!-- Edit route with ID -->
                                                    </a>
                                                    <form action="/events/delete/<%= event.eventid %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this event?');">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle" title="Delete" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                                            <i class="bi bi-trash-fill"></i> <!-- Delete route with ID-->
                                                        </button>
                                                    </form>
                                                    <div class="vr mx-2"></div>
                                                </div>
                                            <% } %>

                                            <div class="d-inline-block text-start mb-2 me-3 text-center">
                                                <h5 class="mb-0 fw-bold"><%= event.reg_count || 0 %></h5>
                                                <small class="text-muted" style="font-size: 0.7rem;">Registered</small>
                                            </div>

                                            <% if (myParticipants.length === 0) { %>
                                                <a href="/participants/add" class="btn btn-sm btn-outline-primary">Create Profile</a>
                                            <% } else if (!user.isParent) { %> <!-- Add participants -->
                                                <% 
                                                    const kidId = myParticipants[0].participantid;
                                                    const isRegNew = registeredSet.has(event.scheduleid + '-' + kidId); 
                                                %>
                                                <% if (isRegNew) { %> <!-- Unregister Route -->
                                                    <form action="/events/unregister" method="POST" class="d-inline">
                                                        <input type="hidden" name="scheduleId" value="<%= event.scheduleid %>">
                                                        <input type="hidden" name="participantId" value="<%= kidId %>">
                                                        <button type="submit" class="btn btn-danger btn-sm px-4 rounded-pill shadow-sm">Unregister</button>
                                                    </form>
                                                <% } else { %> <!-- Register route -->
                                                    <form action="/events/register" method="POST" class="d-inline">
                                                        <input type="hidden" name="scheduleId" value="<%= event.scheduleid %>">
                                                        <input type="hidden" name="participantId" value="<%= kidId %>">
                                                        <button type="submit" class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm">Join</button>
                                                    </form>
                                                <% } %>
                                            <% } else { %>
                                                <button type="button" class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#registerModal"
                                                        onclick="setModalData('<%= event.scheduleid %>', '<%= event.eventname %>')">
                                                    Manage...
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="accordion-item border-0 rounded overflow-hidden shadow-sm">
                <h2 class="accordion-header" id="headingPast">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePast" aria-expanded="false">
                        <i class="bi bi-clock-history me-2 text-secondary"></i> Past Events
                        <span class="badge bg-secondary ms-3 rounded-pill"><%= past.length %></span>
                    </button>
                </h2>
                <div id="collapsePast" class="accordion-collapse collapse">
                    <div class="accordion-body p-0">
                        <% past.forEach(event => { %>
                            <div class="event-row p-4 border-bottom bg-light opacity-75">
                                <div class="row align-items-center">
                                    <div class="col-md-2 text-center border-end"><h5 class="mb-0 fw-bold text-muted"><%= new Date(event.eventdatetimestart).toLocaleDateString() %></h5></div>
                                    <div class="col-md-6 ps-md-4"><h6 class="fw-bold mb-1"><%= event.eventname %></h6><p class="text-muted small mb-0"><%= event.eventlocation %></p></div>
                                    <div class="col-md-4 text-end"><span class="fw-bold text-dark"><%= event.reg_count || 0 %></span> <small class="text-muted">Attended</small></div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Registration: <span id="modalEventName" class="fw-bold"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/events/register" method="POST"> <!-- Register an event route -->
                    <div class="modal-body p-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Select attendees:</label>
                            <div class="border rounded px-3 py-2" style="max-height: 200px; overflow-y: auto;">
                                <% myParticipants.forEach(p => { %>
                                    <div class="form-check participant-option py-1 border-bottom d-flex align-items-center">
                                        <input class="form-check-input m-0 kid-checkbox" 
                                               type="checkbox" 
                                               name="participantId" 
                                               value="<%= p.participantid %>" 
                                               id="p_<%= p.participantid %>"
                                               data-pid="<%= p.participantid %>">
                                        <label class="form-check-label ms-2 participant-label" for="p_<%= p.participantid %>">
                                            <%= p.participantfirstname %> <%= p.participantlastname %>
                                        </label>
                                    </div>
                                <% }) %>
                            </div>
                            <div class="form-text small text-muted mt-2">Uncheck a box to cancel registration.</div>
                        </div>
                        <input type="hidden" name="scheduleId" id="modalScheduleId">
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button> <!-- Submit button -->
                    </div>
                </form>
            </div>
        </div>
    </div>
<!-- FOoter -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Pass data to JS
        const registeredList = <%- JSON.stringify(Array.from(registeredSet)) %>;

        function setModalData(scheduleId, eventName) {
            document.getElementById('modalScheduleId').value = scheduleId;
            document.getElementById('modalEventName').innerText = eventName;
            
            // Check boxes if kid is registered
            document.querySelectorAll('.kid-checkbox').forEach(cb => {
                const pid = cb.getAttribute('data-pid');
                const key = scheduleId + '-' + pid;
                cb.checked = registeredList.includes(key);
            });
        }
    </script>
</body>
</html>