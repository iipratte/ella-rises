<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Donation - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0 fw-bold">Edit Donation Record</h5>
            </div>
            <div class="card-body p-4">
                
                <form action="/admin/donations/edit/<%= donation.donationid %>" method="POST">
                    
                    <div class="mb-3">
                        <label for="participantId" class="form-label fw-bold">Donor</label>
                        <select class="form-select" id="participantId" name="participantId" required>
                            <% participants.forEach(p => { %>
                                <option value="<%= p.participantid %>" 
                                    <%= p.participantid === donation.participantid ? 'selected' : '' %>>
                                    <%= p.participantlastname %>, <%= p.participantfirstname %> (<%= p.participantemail %>)
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="amount" class="form-label fw-bold">Amount ($)</label>
                            <input type="number" class="form-control" id="amount" name="amount" 
                                   value="<%= Number(donation.donationamount).toFixed(2) %>" min="0.01" step="0.01" required>
                        </div>
                        <div class="col-md-6">
                            <label for="date" class="form-label fw-bold">Date</label>
                            <% 
                                let dateVal = '';
                                if (donation.donationdate) {
                                    dateVal = new Date(donation.donationdate).toISOString().split('T')[0];
                                }
                            %>
                            <input type="date" class="form-control" id="date" name="date" value="<%= dateVal %>">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="notes" class="form-label fw-bold">Notes</label>
                        <textarea class="form-control" id="notes" name="notes" rows="2"><%= donation.donationnotes %></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/admin/donations" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>