<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Donation - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5 mb-5" style="max-width: 800px;">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary mb-0" style="font-family: 'DM Serif Display', serif;">Edit Donation Record</h1>
            <a href="/admin/donations" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back to History
            </a>
        </div>

        <div class="row g-4">
            
            <div class="col-md-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-muted text-uppercase small">
                            <i class="bi bi-search me-1"></i> Change Donor (Optional)
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form action="/admin/donations/edit/<%= donation.donationid %>" method="GET" class="row g-3 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label fw-bold small">First Name</label>
                                <input type="text" class="form-control form-control-sm" name="firstName" value="<%= searchFirstName %>">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold small">Last Name</label>
                                <input type="text" class="form-control form-control-sm" name="lastName" value="<%= searchLastName %>">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold small">Username</label>
                                <input type="text" class="form-control form-control-sm" name="username" value="<%= searchUsername %>">
                            </div>
                            <div class="col-md-3 d-grid">
                                <button type="submit" class="btn btn-secondary btn-sm">Search</button>
                            </div>
                        </form>

                        <% if (participants && participants.length > 0) { %>
                            <div class="table-responsive mt-4">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% participants.forEach(p => { %>
                                            <tr>
                                                <td><%= p.participantfirstname %> <%= p.participantlastname %></td>
                                                <td class="text-muted small"><%= p.participantemail %></td>
                                                <td class="text-end">
                                                    <a href="/admin/donations/edit/<%= donation.donationid %>?selectedId=<%= p.participantid %>" 
                                                       class="btn btn-sm btn-outline-primary py-0">
                                                        Select
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else if (searchFirstName || searchLastName || searchUsername) { %>
                            <div class="alert alert-warning mt-3 mb-0 small">No participants found matching your search.</div>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card shadow border-0 border-top border-4 border-primary">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0 fw-bold">Donation Details</h5>
                    </div>
                    <div class="card-body p-4">
                        
                        <div class="alert alert-info d-flex align-items-center mb-4">
                            <i class="bi bi-person-circle fs-4 me-3"></i>
                            <div>
                                <div class="small text-uppercase fw-bold text-muted">Currently Assigned To:</div>
                                <div class="fw-bold fs-5">
                                    <%= selectedParticipant.participantfirstname %> <%= selectedParticipant.participantlastname %>
                                </div>
                                <div class="small text-muted"><%= selectedParticipant.participantemail %></div>
                            </div>
                        </div>

                        <form action="/admin/donations/edit/<%= donation.donationid %>" method="POST">
                            
                            <input type="hidden" name="participantId" value="<%= selectedParticipant.participantid %>">

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="amount" class="form-label fw-bold">Amount ($)</label>
                                    <input type="number" class="form-control" id="amount" name="amount" 
                                           value="<%= Number(donation.donationamount).toFixed(2) %>" min="0.01" step="0.01" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="date" class="form-label fw-bold">Date</label>
                                    <% 
                                        let dateVal = '';
                                        if (donation.donationdate) {
                                            dateVal = new Date(donation.donationdate).toISOString().split('T')[0];
                                        }
                                    %>
                                    <input type="date" class="form-control" id="date" name="date" value="<%= dateVal %>">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="notes" class="form-label fw-bold">Notes</label>
                                <textarea class="form-control" id="notes" name="notes" rows="2"><%= donation.donationnotes %></textarea>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/admin/donations" class="btn btn-outline-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>