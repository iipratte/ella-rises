<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sign Up - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow border-0">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h2 class="mb-0 fw-bold" style="font-family: 'DM Serif Display', serif;">Create Your Account</h2>
                    </div>
                    <div class="card-body p-4">
                        
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error %>
                            </div>
                        <% } %>

                        <form action="/signup" method="POST">
                            
                            <div class="mb-3">
                                <label for="username" class="form-label fw-bold">Username</label>
                                <input
                                    id="username"
                                    name="username"
                                    type="text"
                                    class="form-control"
                                    required
                                    autocomplete="username"
                                    placeholder="Choose a unique username"
                                    value="<%= typeof username !== 'undefined' ? username : '' %>"
                                >
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label fw-bold">Password</label>
                                <input
                                    id="password"
                                    name="password"
                                    type="password"
                                    class="form-control"
                                    required
                                    autocomplete="new-password"
                                    value="<%= typeof password !== 'undefined' ? password : '' %>"
                                >
                            </div>

                            <hr class="my-4 opacity-25">
                            <h5 class="mb-3 text-muted fw-bold small text-uppercase">Personal Information</h5>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstname" class="form-label fw-bold">First Name</label>
                                    <input
                                        id="firstname"
                                        name="firstname"
                                        type="text"
                                        class="form-control"
                                        required
                                        autocomplete="given-name"
                                        value="<%= typeof firstname !== 'undefined' ? firstname : '' %>"
                                    >
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastname" class="form-label fw-bold">Last Name</label>
                                    <input
                                        id="lastname"
                                        name="lastname"
                                        type="text"
                                        class="form-control"
                                        required
                                        autocomplete="family-name"
                                        value="<%= typeof lastname !== 'undefined' ? lastname : '' %>"
                                    >
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label fw-bold">Email Address</label>
                                <input
                                    id="email"
                                    name="email"
                                    type="email"
                                    class="form-control"
                                    required
                                    autocomplete="email"
                                    value="<%= typeof email !== 'undefined' ? email : '' %>"
                                >
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="phone" class="form-label fw-bold">Phone Number</label>
                                    <input
                                        id="phone"
                                        name="phone"
                                        type="tel"
                                        class="form-control"
                                        autocomplete="tel"
                                        value="<%= typeof phone !== 'undefined' ? phone : '' %>"
                                    >
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="dob" class="form-label fw-bold">Date of Birth</label>
                                    <input
                                        id="dob"
                                        name="dob"
                                        type="date"
                                        class="form-control"
                                        required
                                        value="<%= typeof dob !== 'undefined' ? dob : '' %>"
                                    >
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5 mb-3">
                                    <label for="city" class="form-label fw-bold">City</label>
                                    <input
                                        id="city"
                                        name="city"
                                        type="text"
                                        class="form-control"
                                        autocomplete="address-level2"
                                        value="<%= typeof city !== 'undefined' ? city : '' %>"
                                    >
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="state" class="form-label fw-bold">State</label>
                                    <input
                                        id="state"
                                        name="state"
                                        type="text"
                                        class="form-control"
                                        maxlength="2"
                                        autocomplete="address-level1"
                                        value="<%= typeof state !== 'undefined' ? state : '' %>"
                                    >
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="zip" class="form-label fw-bold">Zip Code</label>
                                    <input
                                        id="zip"
                                        name="zip"
                                        type="text"
                                        class="form-control"
                                        pattern="[0-9]{5}"
                                        autocomplete="postal-code"
                                        value="<%= typeof zip !== 'undefined' ? zip : '' %>"
                                    >
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary py-2 shadow-sm">Sign Up</button>
                                <a href="/login" class="btn btn-outline-secondary py-2">Already have an account? Login</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>