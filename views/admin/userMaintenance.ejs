<!DOCTYPE html>
<html lang="en">
<head><!-- Title -->
    <title>User Maintenance - Ella Rises</title>
    <%- include('../partials/head') %>
</head>
<body class="bg-light">
<!-- HEader -->
    <%- include('../partials/header') %>

    <div class="container mt-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="fw-bold text-primary" style="font-family: 'DM Serif Display', serif;">User Management</h1>
                <p class="text-muted">Manage administrator and staff access to the system.</p>
            </div> <!-- Add route -->
            <a href="/admin/users/add" class="btn btn-primary shadow-sm d-inline-flex align-items-center">
                <i class="bi bi-person-plus-fill me-2"></i> Create New User
            </a>
        </div>

        <!-- SEARCH FORM -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body bg-white p-4">
                <form action="/admin/users" method="GET" class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label for="firstName" class="form-label fw-bold text-muted small text-uppercase">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" 
                               value="<%= searchFirstName %>" placeholder="Search...">
                    </div>
                    <div class="col-md-3">
                        <label for="lastName" class="form-label fw-bold text-muted small text-uppercase">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" 
                               value="<%= searchLastName %>" placeholder="Search...">
                    </div>
                    <div class="col-md-3">
                        <label for="username" class="form-label fw-bold text-muted small text-uppercase">Username</label>
                        <input type="text" class="form-control" id="username" name="username" 
                               value="<%= searchUsername %>" placeholder="Search...">
                    </div>
                    <div class="col-md-3 d-grid">
                        <button type="submit" class="btn btn-secondary">Apply Filter</button>
                    </div>
                    
                    <!-- Clear Search Link -->
                    <% if (searchFirstName || searchLastName || searchUsername) { %>
                        <div class="col-12 text-end mt-2">
                            <a href="/admin/users" class="text-decoration-none small text-danger">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="card shadow border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr> <!-- Table -->
                                <th class="ps-4">Username</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Access Level</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody> <!-- Search -->
                            <% if (!users || users.length === 0) { %>
                                <tr><td colspan="6" class="text-center py-5">No users found matching your search.</td></tr>
                            <% } else { %>
                                <% users.forEach(u => { %>
                                    <tr>
                                        <td class="ps-4 fw-bold text-primary"><%= u.username %></td>
                                        <td><%= u.firstname %> <%= u.lastname %></td>
                                        <td><%= u.email %></td>
                                        <td class="text-muted"><%= u.phone || '-' %></td>
                                        <td> <!-- Check level -->
                                            <% if (u.level === 'M') { %>
                                                <span class="badge bg-danger">Manager</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">User</span>
                                            <% } %>
                                        </td>
                                        <td class="text-end pe-4"> <!-- Edit route -->
                                            <a href="/admin/users/edit/<%= u.username %>" class="btn btn-sm btn-outline-secondary me-2">
                                                Edit
                                            </a> <!-- Delete route -->
                                            
                                            <form action="/admin/users/delete/<%= u.username %>" method="POST" class="d-inline" onsubmit="return confirm('Delete user <%= u.username %>?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>