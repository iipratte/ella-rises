<!DOCTYPE html>
<html lang="en">
<head>
    <title>Milestones - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5 mb-5">
        <h1 class="fw-bold text-primary mb-4" style="font-family: 'DM Serif Display', serif;">Milestone Tracking</h1>
        
        <div class="card shadow border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="ps-4 py-3">Participant Name</th>
                                <th class="py-3 text-center">Total Achievements</th>
                                <th class="py-3 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (participants.length === 0) { %>
                                <tr><td colspan="3" class="text-center py-4">No participants found.</td></tr>
                            <% } else { %>
                                <% participants.forEach(p => { %>
                                    <tr>
                                        <td class="ps-4 fw-bold">
                                            <%= p.participantfirstname %> <%= p.participantlastname %>
                                        </td>
                                        <td class="text-center">
                                            <% if (p.total_milestones_achieved > 0) { %>
                                                <span class="badge bg-success rounded-pill"><%= p.total_milestones_achieved %></span>
                                            <% } else { %>
                                                <span class="badge bg-secondary rounded-pill">0</span>
                                            <% } %>
                                        </td>
                                        <td class="text-end pe-4">
                                            <a href="/milestones/view/<%= p.participantid %>" class="btn btn-sm btn-outline-primary">
                                                View & Manage
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>