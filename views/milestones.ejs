<!DOCTYPE html>
<html lang="en">
<head>
    <title>Milestones - Ella Rises</title>
    <%- include('partials/head') %>
</head>
<body class="bg-light">

    <%- include('partials/header') %>

    <div class="container mt-5 mb-5">
        <h1 class="fw-bold text-primary mb-4" style="font-family: 'DM Serif Display', serif;">Milestone Tracking</h1>
        
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body bg-white p-4">
                <form action="/milestones" method="GET" class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label for="firstName" class="form-label fw-bold text-muted small text-uppercase">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" 
                               value="<%= searchFirstName %>" placeholder="Search first name...">
                    </div>
                    <div class="col-md-5">
                        <label for="lastName" class="form-label fw-bold text-muted small text-uppercase">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" 
                               value="<%= searchLastName %>" placeholder="Search last name...">
                    </div>
                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary">Apply</button>
                    </div>
                    
                    <% if (searchFirstName || searchLastName) { %>
                        <div class="col-12 text-end mt-2">
                            <a href="/milestones" class="text-decoration-none small text-danger">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i> 
            Click on a participant's name to view their detailed milestone history.
        </div>

        <div class="accordion shadow-sm" id="milestoneAccordion">
            
            <% if (participants.length === 0) { %>
                <div class="card p-5 text-center border-0">
                    <h5 class="text-muted mb-3">No participants found.</h5>
                    <% if (searchFirstName || searchLastName) { %>
                        <p class="text-muted small">Try adjusting your search terms or <a href="/milestones">clear filters</a>.</p>
                    <% } %>
                </div>
            <% } else { %>
                
                <% participants.forEach((p, index) => { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading<%= index %>">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                                <span class="fw-bold me-3"><%= p.participantfirstname %> <%= p.participantlastname %></span>
                                <% if (p.milestones.length > 0) { %>
                                    <span class="badge bg-success rounded-pill"><%= p.milestones.length %> Achievements</span>
                                <% } else { %>
                                    <span class="badge bg-secondary rounded-pill">0</span>
                                <% } %>
                            </button>
                        </h2>
                        <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#milestoneAccordion">
                            <div class="accordion-body bg-white">
                                
                                <div class="d-flex justify-content-end mb-3">
                                    <a href="/milestones/add/<%= p.participantid %>" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-plus-lg"></i> Add New
                                    </a>
                                </div>

                                <% if (p.milestones.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-hover align-middle">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Date</th>
                                                    <th>Notes</th>
                                                    <th class="text-end">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% p.milestones.forEach(m => { %>
                                                    <tr>
                                                        <td class="fw-semibold"><%= m.milestonetitle %></td>
                                                        <td><%= new Date(m.milestonedate).toLocaleDateString() %></td>
                                                        <td class="text-muted small"><%= m.milestonenotes || '-' %></td>
                                                        
                                                        <td class="text-end" style="white-space: nowrap;">
                                                            <a href="/milestones/edit/<%= m.milestoneid %>" class="btn btn-sm btn-outline-secondary me-2" title="Edit">
                                                                Edit
                                                            </a>
                                                            <form action="/milestones/delete/<%= m.milestoneid %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this milestone?');">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                                    Delete
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <p class="text-muted fst-italic mb-0">No milestones recorded for this participant yet.</p>
                                <% } %>

                            </div>
                        </div>
                    </div>
                <% }) %>

            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>